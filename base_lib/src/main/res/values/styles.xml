<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/dialogWindowAnim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--系统progress的颜色-->
        <item name="colorAccent">#15C466</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_enter_overshot</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_exit_accelerate</item>
    </style>

    <!--从底部弹出dialog样式-->
    <style name="dialog_base" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:backgroundDimEnabled">false</item>  &lt;!&ndash;消除背景阴影&ndash;&gt;-->
        <item name="android:backgroundDimAmount">0.2</item><!--阴影度-->
        <!--<item name="android:windowAnimationStyle">@style/dialog_anim_side</item>-->
    </style>

    <style name="dialog_anim_bottom" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!--    底部-->
    <style name="popup_anim_bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_exit</item>
    </style>

    <!--    向上-->
    <style name="popup_dialog_anim2" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_popup_dialog_enter2</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_dialog_exit2</item>
    </style>

    <!--    向下-->
    <style name="popup_dialog_anim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_popup_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_dialog_exit</item>
    </style>

</resources>