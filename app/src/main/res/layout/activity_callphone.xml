<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_margin="2dp"
        android:hint="请输入您的电话号码"
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_call_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="呼 叫"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动对话框活动"/>

    <Button
        android:id="@+id/testSameImagesView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试SameImagesView"
        android:textAllCaps="false"/>

    <com.example.ldp.base_lib.view.SameImagesView
        android:id="@+id/sameImagines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.ldp.base_lib.view.BezierView
        android:id="@+id/bezierView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.example.ldp.base_lib.view.BezierView>
</LinearLayout>
